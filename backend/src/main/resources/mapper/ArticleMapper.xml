<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.acfun.comments.observer.web.backend.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.acfun.comments.observer.web.backend.entity.Article">
        <id column="aid" property="aid" />
        <result column="last_floor_number" property="lastFloorNumber" />
        <result column="is_completed" property="isCompleted" />
        <result column="comments_count" property="commentsCount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        aid, last_floor_number, is_completed, comments_count
    </sql>

</mapper>
