{
  "name": "acfun-comments-observer-web-front",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build --mode production",
    "production": "vite --mode production",
    "dev": "concurrently \"npm run start-dev\" \"npm run start-windtailcss\"",
    "start-dev": "vite --mode development",
    "start-windtailcss": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.7",
    "element-plus": "^2.5.6",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-vue": "^5.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.21.1",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.0",
    "vue-tsc": "^1.8.27"
  }
}